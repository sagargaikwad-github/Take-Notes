<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmnt_Home">

    <fragment
        android:id="@+id/fragmnt_Home"
        android:name="com.example.takenotes.ui.HomeFragment"
        android:label="Take Notes"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragmnt_Home_to_fragment_createNote"
            app:destination="@id/fragment_CrateNotes" />
        <action
            android:id="@+id/action_fragmnt_Home_to_editNotesFragment"
            app:destination="@id/editNotesFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_CrateNotes"
        android:name="com.example.takenotes.ui.CreateNotesFragment"
        android:label="Add new Notes"
        tools:layout="@layout/fragment_create_notes" >
        <action
            android:id="@+id/action_fragment_createNote_to_fragmnt_Home"
            app:destination="@id/fragmnt_Home" />
    </fragment>
    <fragment
        android:id="@+id/editNotesFragment"
        android:name="com.example.takenotes.ui.EditNotesFragment"
        android:label="fragment_edit_notes"
        tools:layout="@layout/fragment_edit_notes" >
        <action
            android:id="@+id/action_editNotesFragment_to_fragmnt_Home"
            app:destination="@id/fragmnt_Home" />
    </fragment>
</navigation>